{
  "version": 2,
  "name": "my-stream-monitor",
  "builds": [
    {
      "src": "backend/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ],
  "env": {
    "SECRET_KEY": "supersecretkey",
    "NODE_OPTIONS": "--openssl-legacy-provider"
  }
}

